{
  "private": true,
  "engines": {
    "yarn": ">=1.7.0 <2",
    "node": ">=14.18.0"
  },
  "scripts": {
    "build:browser": "yarn --cwd browser-app bundle",
    "build:electron": "yarn --cwd electron-app bundle",
    "prepare": "lerna run prepare",
    "postinstall": "theia check:theia-version",
    "start:browser": "yarn --cwd browser-app start",
    "start:electron": "yarn --cwd electron-app start",
    "watch": "lerna run --parallel watch",
    "test": "cd it-nelson-view && yarn test"
  },
  "devDependencies": {
    "lerna": "2.4.0"
  },
  "workspaces": [
    "it-nelson-fin-imp", "it-nelson-editor", "it-nelson-toolbar", 
    "it-nelson-started", "it-nelson-property-view", 
    "it-nelson-tree-editor", "it-nelson-view",  "it-nelson-dashboard", 
    "it-nelson-joy-dashboard", "it-nelson-gapi",  "it-nelson-s01",
    "it-nelson-theia-sample03", "browser-app", "electron-app"
  ]
}
